<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
     >
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
     >
  	<RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_weight="10"
       android:background="@drawable/danghangklanbj" >

       <TextView
           android:id="@+id/textView1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerInParent="true"
           android:text="我要付款"
           android:textColor="#ffffff"
           android:textSize="@dimen/titlesize" />

       <LinearLayout
           android:id="@+id/pay_back"
           android:layout_width="50dp"
           android:layout_height="match_parent"
           android:gravity="center_vertical" >
           <ImageView 
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:src="@drawable/back"
            />
       </LinearLayout>
       <ImageView
           android:id="@+id/pay_konw"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignBottom="@+id/textView1"
           android:layout_centerVertical="true"
           android:layout_alignParentRight="true"
           android:layout_marginRight="20dp"
           android:src="@drawable/pay_konw" />
   </RelativeLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingTop="20dp"
        android:orientation="vertical"
        android:background="#eee"
        >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.1"
        android:background="@drawable/pay_bg1"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        >
        <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"   
        android:orientation="horizontal" 
        android:gravity="center_vertical"
            >
            <ImageView 
            android:layout_width="20dp"
        	android:layout_height="20dp" 
        	android:src="@drawable/pay_phone"
                />
            <EditText
			android:id="@+id/pay_phone"
            android:layout_width="match_parent"
        	android:layout_height="match_parent"
        	android:layout_weight="1"
        	android:background="@null"   
        	android:layout_marginLeft="7dp"
        	android:singleLine="true"
        	android:inputType="numberSigned"
        	android:hint="输入手机号"
        	android:textSize="13sp"
        	android:maxLength="11"
                />
            <ImageView
            android:id="@+id/pay_fast" 
            android:layout_width="match_parent"
        	android:layout_height="match_parent"
        	android:layout_weight="5" 
        	android:src="@drawable/pay_head"
        	android:layout_marginRight="15dp"    
                />
        </LinearLayout>
        <ImageView 
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#eeeeee"
            />
        <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" 
        android:gravity="center_vertical"   
            >
            <ImageView 
            android:layout_width="20dp"
        	android:layout_height="20dp" 
        	android:src="@drawable/pay_name"
                />
            <TextView
            android:id="@+id/pay_name" 
            android:layout_width="match_parent"
        	android:layout_height="match_parent"
        	android:layout_marginLeft="7dp"
        	android:gravity="center_vertical"
        	android:text="微银用户"
        	android:textColor="#333"
        	android:textSize="14sp"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.2"
        android:background="@drawable/pay_bg2"
        android:layout_marginTop="15dp"
        android:paddingLeft="15dp"
        android:gravity="center_vertical"
        >
        <ImageView 
            android:layout_width="20dp"
        	android:layout_height="20dp" 
        	android:src="@drawable/pay_money"
                />
            <EditText
            android:id="@+id/pay_money" 
            android:layout_width="wrap_content"
        	android:layout_height="match_parent"
        	android:layout_marginLeft="7dp"
        	android:layout_weight="1"
        	android:background="@null"
        	android:hint="请输入付款金额"
        	android:textSize="13sp"
        	android:singleLine="true"
        	android:inputType="number"
        	android:maxLength="9"
                />
    </LinearLayout> 
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.2"
        android:background="@drawable/pay_bg2"
        android:layout_marginTop="15dp"
        android:paddingLeft="15dp"
        android:gravity="center_vertical"
        >
            <ImageView 
            android:layout_width="20dp"
        	android:layout_height="20dp" 
        	android:src="@drawable/pay_sh"
                />
            <TextView 
            android:id="@+id/pay_shtype"
            android:layout_width="match_parent"
        	android:layout_height="match_parent"
        	android:layout_weight="1"
        	android:layout_marginLeft="7dp"
        	android:text="请选择商户及类型"
        	android:gravity="center_vertical"
        	android:textSize="13sp"
                />
            <ImageView 
            android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:layout_weight="5"
        	android:src="@drawable/pay_right"   
        	android:layout_gravity="center_vertical|end" 
                />
    </LinearLayout> 
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="@dimen/margin"
        >
            <Button 
            android:id="@+id/pay_next"
            android:layout_width="match_parent"
        	android:layout_height="@dimen/oknext" 
        	android:text="下一步"
        	android:textColor="#ffffff"
        	android:textSize="18sp"
        	android:background="@drawable/buttonselector"
                />
    </LinearLayout>    
    </LinearLayout> 
	</LinearLayout>
	<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="end"
    android:id="@+id/drawer"
    android:background="#fff"
     >
		<ImageView 
		android:layout_width="match_parent"
    	android:layout_height="match_parent" 
    	android:src="@drawable/pay_konw_deal"
		    />	
	</LinearLayout >
</android.support.v4.widget.DrawerLayout >