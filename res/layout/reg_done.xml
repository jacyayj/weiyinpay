<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:background="@drawable/danghangklanbj"
        >
        <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册"    
        android:textSize="@dimen/titlesize"
        android:textColor="#ffffff"
        android:layout_centerInParent="true"
            />
        <LinearLayout 
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:id="@+id/reg_done_back"
        android:gravity="center_vertical"    
            >
        <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:src="@drawable/back"
        android:layout_marginLeft="10dp"
            />
        <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="首页"
        android:textSize="11sp"
        android:gravity="center"
        android:textColor="#fff"
            />    
        </LinearLayout>
    </RelativeLayout>
	<LinearLayout 
	 android:layout_width="match_parent"
	 android:layout_height="match_parent"
	 android:layout_weight="1"
	 android:padding="@dimen/margin"
	 android:orientation="vertical"  
	 android:background="#eee"
	    >
	 <TextView
	 android:id="@+id/reg_done_user"
	 android:layout_width="match_parent"
	 android:layout_height="match_parent"
	 android:layout_weight="1.7"
	 android:text="尊敬的xxxxxxxxxxxxx用户"
	 android:textColor="#333"
	 android:textSize="18sp"
	 android:gravity="center"    
	     />
	 <TextView 
	 android:layout_width="match_parent"
	 android:layout_height="match_parent"
	 android:layout_weight="1.6"
	 android:text="您已注册成功！"
	 android:textColor="#FF8B33"
	 android:textSize="22sp"
	 android:gravity="center_horizontal|top"
	     />
	 <TextView 
	 android:layout_width="match_parent"
	 android:layout_height="match_parent"
	 android:layout_weight="1.6"
	 android:text="如需开通个人还款、账户提现、个人收款等功能，请进行实名认证。"
	 android:textColor="#666"
	 android:textSize="15sp"
	 android:lineSpacingExtra="5dp"
	     />
	 <TextView 
	 android:layout_width="match_parent"
	 android:layout_height="match_parent"
	 android:layout_weight="1.7"
	 android:text="只需几步完成"
	 android:textColor="#666"
	 android:textSize="14sp"    
	     />
	 <LinearLayout 
	 android:layout_width="match_parent"
	 android:layout_height="match_parent"
	 android:layout_weight="0.8"
	 android:orientation="vertical"
	     >
        <Button
        android:id="@+id/reg_done_ok" 
        android:layout_width="match_parent"
        android:layout_height="@dimen/oknext"
        android:background="@drawable/buttonselector"
        android:textColor="#fff"
		android:text="实名认证"
		android:textSize="16sp"
            />
        <Button
        android:id="@+id/reg_done_no" 
        android:layout_width="match_parent"
        android:layout_height="@dimen/oknext"
        android:background="@drawable/reg_done2"
        android:layout_marginTop="15dp"
        android:textColor="#fff"
		android:text="暂不认证"
		android:textSize="16sp"
            />
	 </LinearLayout>   
	</LinearLayout>
</LinearLayout>
