<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:background="@drawable/danghangklanbj"
        >
        <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="交易记录"    
        android:textSize="@dimen/titlesize"
        android:textColor="#ffffff"
        android:layout_centerInParent="true"
            />
        <LinearLayout 
         android:id="@+id/record_back"
        android:layout_width="50dp"
        android:layout_height="match_parent"
       
        android:gravity="center_vertical"    
            >
        <ImageView 
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:src="@drawable/back"
            />    
        </LinearLayout>
    </RelativeLayout>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_weight="1"
	    android:orientation="vertical"
	    android:background="#eee"
	    >
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_weight="6"
	    android:padding="20dp"
	    android:gravity="center"
	    android:orientation="horizontal"
	    >
	    <Button
	    android:id="@+id/record_btn1" 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="@drawable/record_left_a"
	    android:layout_weight="1"
	    android:textColor="#fff"
	    android:text="收入"
	    android:textSize="12sp"    
	        />
	    <Button
	    android:id="@+id/record_btn2" 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="@drawable/record_mid_b"
	    android:text="支出"
	    android:textColor="#333"
	    android:textSize="12sp"
	    android:layout_weight="1"    
	        />
	    <Button 
	    android:id="@+id/record_btn3"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_weight="1"
	    android:background="@drawable/record_mid_a2"
	    android:text="提现"
	    android:textColor="#333"
	    android:textSize="12sp"    
	        />
	    <Button 
	    android:id="@+id/record_btn4"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_weight="1"
	    android:background="@drawable/record_right_b"
	    android:text="便民"
	    android:textColor="#333"
	    android:textSize="12sp"    
	        />
	</LinearLayout>
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_weight="1"
	    android:orientation="vertical"
	    >
	    <ListView
	    android:id="@+id/record_list" 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:divider="@drawable/long_line"
	        >
	    </ListView>
	    <ImageView 
	    android:id="@+id/record_image1"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:src="@drawable/norecord"
	        />
	</RelativeLayout>    
	</LinearLayout>
</LinearLayout>
