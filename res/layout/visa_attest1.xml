<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/danghangklanbj"
    android:layout_weight="10"
     >
        <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="信用卡认证"   
        android:textSize="@dimen/titlesize"
        android:textColor="#fff"
        android:layout_centerInParent="true"
            />
        <LinearLayout 
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:id="@+id/visa_attest1_back"
        android:gravity="center"
            >
        <ImageView 
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:src="@drawable/back" 
            />    
        </LinearLayout>
	</RelativeLayout>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_weight="1"
	    android:orientation="vertical"
	    android:background="#eee"
	    >
	    <ImageView 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:src="@drawable/visa_attest_1"
	        android:layout_marginLeft="25dp"
	        android:layout_marginTop="15dp"
	        android:layout_marginRight="25dp"
	        />
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="25dp"
	        android:layout_marginRight="25dp"
	        android:layout_marginBottom="15dp"
	        android:orientation="horizontal"
	        >
	        <TextView 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text="刷卡验证"
	            android:layout_weight="1"
	            android:textColor="#333"
	            android:textSize="12sp"
	            />
	        <TextView 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:text="上传信用卡正面照"
	            android:textColor="#666"
	            android:gravity="center"
	            android:textSize="12sp"
	            />
	        <TextView 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:text="支付会员费"
	            android:textColor="#666"
	            android:gravity="end"
	            android:textSize="12sp"
	            />
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:orientation="horizontal"
	        android:background="@drawable/more_list_selector"
	        android:gravity="center_vertical"
	        android:paddingLeft="20dp"
	        android:paddingRight="20dp"
	        >
	         <TextView 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="3"
	        android:text="卡号"
	        android:textColor="#333"
	        />
	       <TextView 
	        android:id="@+id/visa_cardno"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="1234567890"
	        android:textColor="#333"
	        />
	    </LinearLayout>
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="该信用卡已校验为您本人持有"
	        android:textColor="#55a3ef"
	        android:layout_marginTop="10dp"
	        android:layout_marginLeft="20dp"
	        />
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_marginTop="10dp"
	        android:layout_height="50dp"
	        android:orientation="horizontal"
	        android:background="@drawable/more_list_selector"
	        android:paddingLeft="20dp"
	        android:paddingRight="20dp"
	        android:gravity="center_vertical"
	        >
	         <TextView 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="3"
	        android:text="有效期"
	        android:textColor="#333"
	        />
	          <EditText 
	        android:id="@+id/visa_carddate"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:hint="月/年"
	        android:textColor="#333"
	        android:textSize="13sp"
	        android:background="@null"
	        />
	    </LinearLayout>
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="信用卡有效期不小于六个月"
	        android:textColor="#55a3ef"
	        android:layout_marginTop="10dp"
	        android:layout_marginLeft="20dp"
	        android:textSize="13sp"
	        />
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_horizontal"
	        >
	        <ImageView 
	        android:layout_width="200dp"
	        android:layout_height="150dp"
	        android:src="@drawable/visa_modle"
	        />
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="有效期"
	            android:layout_gravity="bottom"
	            android:layout_marginBottom="12dp"
	            />
	    </LinearLayout>
	    <Button
	        android:id="@+id/visa_attest1_next" 
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:textColor="#fff"
	        android:layout_marginLeft="15dp"
	        android:layout_marginRight="15dp"
	        android:text="下一步"
	        android:background="@drawable/buttonselector"
	        android:textSize="16sp"
	        />
	</LinearLayout>
</LinearLayout>
