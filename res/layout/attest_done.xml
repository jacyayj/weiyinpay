<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:background="@drawable/danghangklanbj"
        >
        <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="认证进度"    
        android:textSize="@dimen/titlesize"
        android:textColor="#ffffff"
        android:layout_centerInParent="true"
            />
        <LinearLayout 
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:id="@+id/attest_done_back"
        android:gravity="center_vertical"    
            >
        <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:src="@drawable/back"
        android:layout_marginLeft="10dp"
            />
        <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="首页"
        android:textSize="11sp"
        android:gravity="center"
        android:textColor="#fff"
            />    
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"  
    android:background="#eee" 
        >
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="2"    
        ></LinearLayout>    
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="horizontal"    
        >
        <RelativeLayout 
    	android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_weight="1.3"
        >
        <ImageView
            android:id="@+id/attest_done" 
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/attest_done_1"
            />    
        </RelativeLayout>
        <LinearLayout 
    	android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_weight="1"
    	android:orientation="vertical"
    	android:layout_marginLeft="15dp"    
        >
        <TextView
		android:id="@+id/attest_tv1"
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_weight="1"
    	android:layout_marginTop="18dp"
    	android:text="认证申请已提交"
    	android:textColor="#333"    
            />
        <TextView 
        android:id="@+id/attest_tv2"
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_weight="1"
    	android:text="认证处理中"
    	android:gravity="center_vertical"
    	android:textColor="#999"    
            />
        <TextView 
        android:id="@+id/attest_tv3"
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_weight="1"
    	android:text="认证成功"
    	android:textColor="#999"
    	android:gravity="bottom"
    	android:layout_marginBottom="18dp"     
            />
        </LinearLayout>
    </LinearLayout>
	<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1.6"
    android:orientation="horizontal"    
        >
	    
	</LinearLayout>
    </LinearLayout>
    
</LinearLayout>
