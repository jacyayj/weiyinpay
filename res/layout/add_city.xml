<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:background="@drawable/danghangklanbj"
        >
        <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_card"    
        android:textSize="@dimen/titlesize"
        android:textColor="#ffffff"
        android:layout_centerInParent="true"
            />
        <LinearLayout 
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:id="@+id/city_back"
        android:gravity="center_vertical"    
            >
        <ImageView 
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:src="@drawable/back"
            />    
        </LinearLayout>
    </RelativeLayout>
	<LinearLayout 
	   	android:layout_width="match_parent"
       	android:layout_height="match_parent"
        android:layout_weight="1" 
        android:orientation="vertical"
        android:background="#EEE"
	    >
	    <LinearLayout 
	    android:layout_width="match_parent"
       	android:layout_height="match_parent"
        android:layout_weight="2.2" 
        android:orientation="horizontal" 
        android:gravity="center_vertical"  
        android:paddingLeft="20dp" 
        android:paddingRight="20dp"
        android:layout_marginTop="8dp"
	        >
	    <TextView 
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:text="当前无银行卡绑定，需绑定银行卡"
	        android:textSize="12sp"
	        />        
	    </LinearLayout>
	    <LinearLayout 
	    android:layout_width="match_parent"
       	android:layout_height="match_parent"
        android:layout_weight="2.2"   
        android:orientation="horizontal"
        android:paddingLeft="20dp" 
        android:paddingRight="20dp"
        android:gravity="center_vertical"
	        >
	    <TextView 
	        android:layout_height="wrap_content"
	        android:layout_width="match_parent"
	        android:layout_weight="1"
	        android:text="提款人开户信息"
	        android:textSize="14sp"
	        />
	    </LinearLayout>
	    <LinearLayout 
	    android:id="@+id/city_bank"
	    android:layout_width="match_parent"
       	android:layout_height="match_parent"
        android:layout_weight="2.17"  
        android:orientation="horizontal"
        android:background="@drawable/account_bg3"  
        android:paddingLeft="20dp" 
        android:paddingRight="20dp"
        android:gravity="center_vertical"
	        >
	      <ImageView 
	        android:id="@+id/add_city_bankimage"
		    android:layout_width="30dp"
		    android:layout_height="30dp"
		    android:layout_marginRight="20dp"
		    android:visibility="gone"
		    />  
		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:text="请选择开户银行"
		    android:id="@+id/city_c1"
		    android:layout_weight="1"
		    android:gravity="center_vertical"
		    android:textColor="#333"
		    android:textSize="14sp"/>
		<ImageView 
		    android:layout_width="wrap_content"
		    android:layout_height="15dp"
		    android:src="@drawable/cyty_right"
		    android:layout_marginRight="5dp"
		    android:clickable="false"
		    android:layout_gravity="center_vertical"
		    />
	    </LinearLayout>
	    <LinearLayout 
	    
	    android:layout_width="match_parent"
       	android:layout_height="match_parent"
        android:layout_weight="2.1"  
        android:orientation="vertical"
        android:background="@drawable/account_bg3"    
        android:paddingLeft="20dp" 
        android:paddingRight="20dp"
        android:gravity="center_vertical" 
        android:layout_marginTop="10dp"   
	        >
 		<LinearLayout 
 		android:layout_width="match_parent"
       	android:layout_height="match_parent"
        android:layout_weight="1"  
        android:orientation="horizontal"
        android:background="@drawable/account_bg3" 
        android:gravity="center_vertical"      
 		    >
 		<LinearLayout
 		    android:id="@+id/city_add"
 		    android:layout_width="match_parent"
 		    android:layout_height="match_parent"
 		    android:orientation="horizontal"
 		    android:layout_weight="1"
 		    >
 		    <TextView 
 		    android:id="@+id/city_pw"  
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_weight="2.5"
		    android:gravity="center_vertical"
		    android:text="请选择开户省市"
		    android:textSize="14sp"
		    android:textColor="#333"    
 		        />
 		    <ImageView 
		    android:layout_width="wrap_content"
		    android:layout_height="15dp"
		    android:src="@drawable/cyty_right"
		    android:layout_marginRight="5dp"
		    android:clickable="false"
		    android:layout_gravity="center_vertical"
		    />
 		</LinearLayout>
 		</LinearLayout>
	    </LinearLayout>
	    <LinearLayout 
	    
	    android:layout_width="match_parent"
       	android:layout_height="match_parent"
        android:layout_weight="2.1"  
        android:orientation="vertical"
        android:background="@drawable/account_bg3"    
        android:paddingLeft="20dp" 
        android:paddingRight="20dp"
        android:gravity="center_vertical" 
        android:layout_marginTop="10dp"   
	        >
 		<LinearLayout 
 		android:layout_width="match_parent"
       	android:layout_height="match_parent"
        android:layout_weight="1"  
        android:orientation="horizontal"
        android:background="@drawable/account_bg3" 
        android:gravity="center_vertical"      
 		    >
 		<LinearLayout
 		    android:id="@+id/city_zh"
 		    android:layout_width="match_parent"
 		    android:layout_height="match_parent"
 		    android:orientation="horizontal"
 		    android:layout_weight="1"
 		    >
 		    <TextView 
 		    android:id="@+id/city_zh_name"  
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_weight="2.5"
		    android:gravity="center_vertical"
		    android:text="请选择开户支行"
		    android:textSize="14sp"
		    android:textColor="#333"    
 		        />
 		    <ImageView 
		    android:layout_width="wrap_content"
		    android:layout_height="15dp"
		    android:src="@drawable/cyty_right"
		    android:layout_marginRight="5dp"
		    android:clickable="false"
		    android:layout_gravity="center_vertical"
		    />
 		</LinearLayout>
 		</LinearLayout>
 		
	    </LinearLayout>
	    <LinearLayout 
	    android:layout_width="match_parent"
       	android:layout_height="match_parent"
        android:layout_weight="1.2" 
        android:layout_marginTop="20dp"
        android:padding="20dp"    
	        >
	        <Button 
            android:id="@+id/city_ok"
            android:layout_width="match_parent"
        	android:layout_height="@dimen/oknext"
        	android:text="确定"
        	android:textColor="#ffffff"
        	android:textSize="18sp"
        	android:background="@drawable/buttonselector"
                />
	    </LinearLayout>
	</LinearLayout>
</LinearLayout>
