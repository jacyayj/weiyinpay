<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="vertical"
    android:background="@drawable/list_mid_selector"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
     >
	<LinearLayout 
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_weight="2"
	android:orientation="horizontal"    
	    >
	<TextView
	android:id="@+id/record_item1" 
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_weight="1" 
	android:gravity="center_vertical"
	android:text="民生服务"
	android:textColor="#333333"
	android:textSize="14sp"   
	    />
	<TextView
	android:id="@+id/record_item2" 
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_weight="1"
	android:gravity="center"
	android:layout_marginLeft="10dp"
	android:text="+8.00"
	android:textColor="#E7614B"
	android:textSize="18sp"     
	    />     
	</LinearLayout>
	<LinearLayout 
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_weight="3"
	android:layout_marginBottom="5dp"    
	    >
	<TextView
	android:id="@+id/record_item3" 
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_weight="1" 
	android:gravity="center_vertical"
	android:text="交易成功"
	android:textColor="#666666"
	android:textSize="15sp"   
	    />
	<ImageView 
	android:layout_width="wrap_content"
	android:layout_height="match_parent"
	android:src="@drawable/time"
	    />
	<TextView 
	android:id="@+id/record_item4"
	android:layout_width="wrap_content"
	android:layout_height="match_parent"
	android:gravity="center_vertical"
	android:layout_marginLeft="15dp"
	android:text="2015-6-9 12:12:12"
	android:textColor="#666666"
	android:textSize="12sp"    
	    />    
	</LinearLayout>
</LinearLayout>
