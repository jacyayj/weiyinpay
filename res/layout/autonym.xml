<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >
	<RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:background="@drawable/danghangklanbj"
        >
        <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="实名认证"    
        android:textSize="@dimen/titlesize"
        android:textColor="#fff"
        android:layout_centerInParent="true"
            />
        <LinearLayout 
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:id="@+id/autonym_back"
        android:gravity="center_vertical"    
            >
        <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:src="@drawable/back"
        android:layout_marginLeft="10dp"
            />
        <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="首页"
        android:textSize="11sp"
        android:gravity="center"
        android:textColor="#fff"
            />    
        </LinearLayout>
    </RelativeLayout>    
	<LinearLayout 
   		android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_weight="1"
    	android:padding="15dp"
    	android:orientation="vertical"
    	android:background="#eee"
    	>
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_weight="1.5" 
		    android:orientation="vertical"
		    android:background="#ffffff"
		    android:padding="20dp"
		    >
		    <LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_weight="1" 
		    android:orientation="horizontal"    
		        >
		        <TextView 
		        android:layout_width="wrap_content"
		    	android:layout_height="match_parent"
		    	android:text="尊敬的："
		    	android:textSize="14sp"
		    	android:textColor="#666"
		    	android:gravity="center_vertical"     
		            />
		        <TextView 
		        android:id="@+id/autonym_name"
		        android:layout_width="match_parent"
		    	android:layout_height="match_parent"
		    	android:layout_weight="1"
		    	android:text="xxx" 
		    	android:textSize="14sp"
		    	android:textColor="#666"
		    	android:gravity="center_vertical"    
		            />
		    </LinearLayout>
		    <LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
		    android:orientation="horizontal"     
		        >
		        <TextView 
		        android:layout_width="wrap_content"
		    	android:layout_height="match_parent"
		    	android:text="您的账户为："
		    	android:textColor="#666"
		    	android:gravity="center_vertical"
		    	android:textSize="14sp"     
		            />
		        <TextView 
		        android:id="@+id/autonym_phone"
		        android:layout_width="match_parent"
		    	android:layout_height="match_parent"
		    	android:layout_weight="1.5"
		    	android:text="xxx xxxxxxxx" 
		    	android:textSize="14sp"
		    	android:textColor="#FF9752"
		    	android:gravity="center_vertical"    
		            />
		    </LinearLayout>

		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:layout_weight="1"
		        android:orientation="horizontal"
		         >
		        <TextView 
		        android:layout_width="wrap_content"
		    	android:layout_height="match_parent"
		    	android:text="身份证号码："
		    	android:textSize="14sp"
		    	android:textColor="#666"
		    	android:gravity="center_vertical"     
		            />
		        <TextView 
		        android:id="@+id/autonym_id"
		        android:layout_width="match_parent"
		    	android:layout_height="match_parent"
		    	android:layout_weight="1"
		    	android:text="xxx" 
		    	android:textSize="14sp"
		    	android:textColor="#666"
		    	android:gravity="center_vertical"    
		            />
		    </LinearLayout>

		</LinearLayout>
	<LinearLayout 
	    android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_weight="1"
    	android:orientation="vertical"
    	android:paddingLeft="20dp"
    	android:paddingRight="20dp"
    	android:paddingTop="20dp"
	    >
	    <TextView 
	    android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:text="照片已上传成功！"
    	android:textSize="16sp"  
    	android:textColor="#555555" 
	        />
	    <TextView 
	    android:layout_marginTop="5dp"
	    android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_weight="1"
    	android:text="9:30-17:00为实名认证时间，提交审核后，工作人员5-10分钟内进行审核，请在5-10分钟后退出客户端重新登录，即可查看验证状态。"
    	android:textSize="14sp"  
    	android:textColor="#555555" 
    	android:lineSpacingExtra="5sp"
	        />
	    <LinearLayout 
	    android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_weight="3"    
	        >
	    <TextView 
	    android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_weight="1.2" 
    	android:text="资料提交时间："
    	android:textColor="#888888"
    	android:gravity="bottom"
    	android:textSize="13sp"   
	        /> 
	    <TextView 
	    android:id="@+id/autonym_time"
	    android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_weight="1" 
    	android:text="xxxx-xx-xx  xx:xx:xx"
    	android:textColor="#444444"
    	android:gravity="bottom" 
    	android:textSize="13sp"
	        />   
	    </LinearLayout>
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_weight="1.7"
    	android:gravity="center"
	    >
    <Button 
        android:id="@+id/autonym_ok"
        android:layout_width="match_parent"
        android:layout_height="@dimen/oknext" 
        android:text="查看认证状态"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:background="@drawable/buttonselector"   
        />        
	</LinearLayout>    
	</LinearLayout>
</LinearLayout>
