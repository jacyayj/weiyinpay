<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/danghangklanbj"
    android:layout_weight="10"
     >
        <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="信用卡认证"   
        android:textSize="@dimen/titlesize"
        android:textColor="#fff"
        android:layout_centerInParent="true"
            />
        <LinearLayout 
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:id="@+id/visa_attest2_back"
        android:gravity="center"
            >
        <ImageView 
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:src="@drawable/back" 
            />    
        </LinearLayout>
	</RelativeLayout>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_weight="1"
	    android:orientation="vertical"
	    android:background="#fffefe"
	    >
	    <ImageView 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:src="@drawable/visa_attest_2"
	        android:layout_marginLeft="25dp"
	        android:layout_marginTop="25dp"
	        android:layout_marginRight="25dp"
	        />
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="25dp"
	        android:layout_marginRight="25dp"
	        android:layout_marginBottom="25dp"
	        android:orientation="horizontal"
	        >
	        <TextView 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text="刷卡验证"
	            android:layout_weight="1"
	            android:textColor="#666"
	            android:textSize="12sp"
	            />
	        <TextView 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:text="上传信用卡正面照"
	            android:textColor="#333"
	            android:gravity="center"
	            android:textSize="12sp"
	            />
	        <TextView 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:text="支付会员费"
	            android:textColor="#666"
	            android:gravity="end"
	            android:textSize="12sp"
	            />
	    </LinearLayout>
	    <TextView 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="信用卡正面照"
	        android:textSize="15sp"
	        android:layout_marginLeft="15dp"
	        android:textColor="#666"
	        />
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="120dp"
	        android:layout_marginLeft="25dp"
	        android:layout_marginRight="25dp"
	        android:layout_marginTop="10dp"
	        android:orientation="horizontal"
	        >
	        <ImageView 
	            android:id="@+id/visa_takephoto"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	            android:src="@drawable/take_visa_1"
	            android:layout_marginRight="10dp"
	            />
	        <ImageView 
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	            android:src="@drawable/take_visa_2"
	            android:layout_marginLeft="10dp"
	            />
	    </LinearLayout>
	    <Button
	        android:id="@+id/visa_attest2_next" 
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:textColor="#fff"
	        android:layout_marginLeft="15dp"
	        android:layout_marginRight="15dp"
	        android:text="下一步"
	        android:background="@drawable/buttonselector"
	        android:textSize="16sp"
	        />
	</LinearLayout>
</LinearLayout>
